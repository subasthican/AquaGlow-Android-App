<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background -->
    <item android:drawable="@drawable/gradient_background" />
    
    <!-- Logo with enhanced colors -->
    <item android:gravity="center">
        <vector
            android:width="140dp"
            android:height="140dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <!-- Outer circle with gradient effect -->
            <path
                android:fillColor="@color/white"
                android:pathData="M12,2C6.48,2 2,6.48 2,12s4.48,10 10,10 10,-4.48 10,-10S17.52,2 12,2zM12,20c-4.41,0 -8,-3.59 -8,-8s3.59,-8 8,-8 8,3.59 8,8 -3.59,8 -8,8z"/>
            
            <!-- Inner circle with secondary color -->
            <path
                android:fillColor="@color/secondary_light"
                android:pathData="M12,4c-4.41,0 -8,3.59 -8,8s3.59,8 8,8 8,-3.59 8,-8 -3.59,-8 -8,-8z"/>
            
            <!-- Center dot with accent color -->
            <path
                android:fillColor="@color/accent"
                android:pathData="M12,8c-2.21,0 -4,1.79 -4,4s1.79,4 4,4 4,-1.79 4,-4 -1.79,-4 -4,-4z"/>
            
            <!-- Water ripple effect -->
            <path
                android:fillColor="@color/white"
                android:fillAlpha="0.3"
                android:pathData="M8,12c0,-2.21 1.79,-4 4,-4s4,1.79 4,4 -1.79,4 -4,4 -4,-1.79 -4,-4z"/>
        </vector>
    </item>
    
    <!-- Subtle pattern overlay -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>
</layer-list>
