<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AquaGlow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- AquaGlow Rich Dark Theme -->
        <item name="colorPrimary">@color/secondary_light</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/gray_900</item>
        
        <item name="colorTertiary">@color/ocean_light</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>