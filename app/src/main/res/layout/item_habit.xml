<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/surface_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Enhanced Checkbox -->
        <CheckBox
            android:id="@+id/habitCompletedCheckbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:buttonTint="@color/secondary"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <!-- Habit Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/habitNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink 8 glasses of water"
                android:textColor="@color/text_primary_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/habitDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Stay hydrated throughout the day"
                android:textColor="@color/text_secondary_light"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/habitCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_chip_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Health"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Completion Status Indicator -->
                <View
                    android:id="@+id/completionIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/completion_indicator"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/editHabitButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_secondary_background"
                android:src="@drawable/ic_edit"
                android:tint="@color/secondary"
                android:padding="8dp" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/deleteHabitButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_secondary_background"
                android:src="@drawable/ic_delete"
                android:tint="@color/error"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>