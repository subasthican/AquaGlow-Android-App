<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Character Illustrations -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Woman Character -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_woman_character"
                    android:contentDescription="Woman character" />

                <!-- Man Character -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_man_character"
                    android:contentDescription="Man character" />

            </LinearLayout>

        </LinearLayout>

        <!-- Input Section -->
        <LinearLayout
            android:id="@+id/inputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <!-- Question Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:text="@string/what_should_we_call_you"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            <!-- Name Input Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeColor="@color/secondary"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:helperTextTextColor="@color/white"
                app:errorTextColor="@color/error_light"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/secondary"
                app:endIconMode="clear_text"
                app:endIconTint="@color/primary_dark"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/primary_dark"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:hint="@string/enter_your_name"
                    android:textColorHint="@color/gray_500"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Let's Begin Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/letsBeginButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:text="@string/lets_begin"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:alpha="0.6"
                app:backgroundTint="@color/secondary"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                app:rippleColor="@color/secondary_light"
                style="@style/Widget.Material3.Button" />

            <!-- Skip Option -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Skip for now"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.7"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:onClick="onSkipClicked" />

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</ScrollView>
