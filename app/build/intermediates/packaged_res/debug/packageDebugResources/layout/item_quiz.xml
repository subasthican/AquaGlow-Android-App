<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Quiz Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/quizTitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quiz Title"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quizDifficultyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EASY"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/difficulty_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Quiz Description -->
        <TextView
            android:id="@+id/quizDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz description goes here"
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Quiz Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/quizCategoryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category"
                android:textColor="@color/text_secondary_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/quizTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:textColor="@color/text_secondary_light"
                android:textSize="12sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/quizPointsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 questions"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>







