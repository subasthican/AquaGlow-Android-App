<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hydration_daily_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Goal Text -->
        <TextView
            android:id="@+id/waterGoalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hydration_goal_text"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:background="@drawable/underline_input_background"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground" />

        <!-- Circular Water Level Indicator -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="140dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_light">

            <com.example.aquaglow.WaterLevelCircleView
                android:id="@+id/waterLevelCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Water Level Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hydration_enter_water"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:hint="Amount (ml)"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/waterAmountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addWaterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="@string/hydration_add_water"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_water_drop"
                    app:iconGravity="textStart"
                    app:cornerRadius="28dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Quick Add Cups -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hydration_quick_add"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/customizeCupsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hydration_customize"
                android:textSize="12sp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@color/primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addSmallCupButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hydration_200ml"
                android:textSize="14sp"
                app:icon="@drawable/ic_cup"
                app:iconSize="20dp"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@color/secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addMediumCupButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hydration_300ml"
                android:textSize="14sp"
                app:icon="@drawable/ic_glass"
                app:iconSize="20dp"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@color/secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addLargeCupButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hydration_500ml"
                android:textSize="14sp"
                app:icon="@drawable/ic_cup"
                app:iconSize="20dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/primary" />
        </LinearLayout>

        <!-- Hydration Reminder Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_background"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hydration_reminders_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/testNotificationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hydration_test"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/secondary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reminderToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hydration_start"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hydration_remind_every"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Interval"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reminderIntervalInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:text="@string/hydration_30_minutes" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/intervalTypeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hydration_minutes"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:backgroundTint="@color/secondary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/reminderStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/hydration_reminders_off"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Today's History -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hydration_today_history"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hydration_reset_button"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@color/error" />
        </LinearLayout>

        <!-- History RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp" />

    </LinearLayout>
</ScrollView>
