<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Metric Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/metricNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Metric Name"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/metricStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Healthy"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/confidence_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Metric Value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/metricValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:textColor="@color/primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/metricUnitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="@color/text_secondary_light"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Metric Category -->
        <TextView
            android:id="@+id/metricCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physical Health"
            android:textColor="@color/text_secondary_light"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>







