<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Insight Icon -->
        <TextView
            android:id="@+id/insightIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="ðŸ’¡"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/insight_icon_background"
            android:layout_marginEnd="16dp" />

        <!-- Insight Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/insightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insight Title"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insightDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insight description"
                android:textColor="@color/text_secondary_light"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/insightRecommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Recommendation"
                android:textColor="@color/secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Confidence Badge -->
        <TextView
            android:id="@+id/insightConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:background="@drawable/confidence_badge_background"
            android:padding="4dp"
            android:gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>







