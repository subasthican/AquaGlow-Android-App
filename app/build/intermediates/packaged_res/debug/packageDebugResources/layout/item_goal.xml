<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Goal Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/goalTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Goal Title"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ†"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Goal Description -->
        <TextView
            android:id="@+id/goalDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal description"
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/goalProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progressTint="@color/secondary"
                android:progressBackgroundTint="@color/gray_200"
                android:max="100" />

            <TextView
                android:id="@+id/goalProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0/100"
                android:textColor="@color/text_secondary_light"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Goal Category and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/goalCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Health"
                android:textColor="@color/secondary"
                android:textSize="12sp"
                android:background="@drawable/category_chip_background"
                android:padding="4dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/goalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 15, 2024"
                android:textColor="@color/text_secondary_light"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>







